{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <h2>Write a post</h2>
    {{ form(post_form) }}

<div class="container">
    <div class="row">
        <div class="col">

            <div class="text-center">
            <h2>Your posts</h2>
            </div>

            {% for post in my_posts %}
        {% if post.admin.id == admin.id  %}
            <div class="card text-center">
                <h5 class="card-header">Author: {{ post.author}} </h5>
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">{{ post.text }}</p>

                    <div class="card-body">
                        <a href="{{ path('update', {slug: post.slug}) }}">Update</a>
                        <a href="{{  path('delete', {slug: post.slug}) }}">Delete</a>
                    </div>

                </div>
            </div>
        {% endif %}
    {% endfor %}

        </div>
    </div>
</div>
{% endblock %}

