{% extends 'base.html.twig' %}

{% block title %}Post book{% endblock %}

{% block body %}

    <div class="container">

        <h3><a href="{{ path('user', {id: user.id}) }}">My Posts</a></h3>

        <div class="row">


            <h2 class="text-center">All Posts</h2>
                {% for post in posts %}
            <div class="col">

                    <div class="card text-center" style="width: 15rem; margin-bottom: 10px;">
                        <h5 class="card-header">Author: {{ post.author}} </h5>
                        <div class="card-body">
                            <h5 class="card-text">{{ post.title }}</h5>
                            <div class="card-footer"><a  href="{{ path('post', {slug: post.slug}) }}" class="btn btn-primary">Go to post</a></div>
                        </div>
                    </div>
            </div>
                {% endfor %}

            <div class="text-center">
                {% if previous >= 0 %}
                    <a href="{{ path('homepage', { offset: previous }) }}">Previous</a>
                {% endif %}
                {% if next < posts|length %}
                    <a href="{{ path('homepage', { offset: next }) }}">Next</a>
                {% endif %}
            </div>

        </div>
    </div>

{% endblock %}
