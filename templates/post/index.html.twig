{% extends 'base.html.twig' %}

{% block title %}Post book{% endblock %}

{% block body %}




<div class="container">


    {% for admin in admins %}

        {% if admin.username == session._sf2_attributes['_security.last_username'] %}
            <h3><a href="{{ path('user', {id: admin.id}) }}">My Posts</a></h3>
        {% endif %}

    {% endfor %}

    <div class="row">


        <h2 class="text-center">All Posts</h2>
            {% for post in posts %}
        <div class="col">

                <div class="card text-center" style="width: 18rem; margin-bottom: 10px;">
                    <h5 class="card-header">Author: {{ post.author}} </h5>
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <a href="{{ path('post', {slug: post.slug}) }}" class="btn btn-primary">Go to post</a>
                    </div>
                </div>
        </div>

            {% endfor %}
    </div>
</div>

{% endblock %}
